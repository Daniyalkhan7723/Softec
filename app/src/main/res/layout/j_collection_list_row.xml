<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="@dimen/_10sdp"
    android:background="@drawable/gray_background_ripple"

    >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/red_color"
            android:layout_toStartOf="@id/food_item_price"
            android:layout_alignParentStart="true"
            android:paddingEnd="@dimen/_5sdp"
            android:singleLine="true"
            android:maxLines="2"
            android:ellipsize="end"
            android:textSize="@dimen/_13sdp"
            android:id="@+id/food_item_name"
            android:text="Pizza Deal"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/red_color"
            android:textSize="@dimen/_11sdp"
            android:singleLine="true"
            android:ellipsize="end"
            android:id="@+id/food_item_price"
            android:layout_alignParentEnd="true"
            android:text="$10.21"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:maxLines="1"
            android:textColor="#C0C0C0"
            android:layout_below="@id/food_item_name"
            android:textSize="@dimen/_10sdp"
            android:ellipsize="end"
            android:id="@+id/food_item_description"
            android:text="Description "/>

</RelativeLayout>