<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rv_extra_adding_parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/_8sdp">
    <ImageView
        android:id="@+id/iv_extra_adding"
        android:src="@drawable/ic_baseline_uncheck_box"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_width="@dimen/_18sdp"
        android:layout_height="@dimen/_18sdp"/>

    <LinearLayout
        android:layout_marginStart="@dimen/_7sdp"
        android:layout_marginEnd="@dimen/_7sdp"
        android:layout_toEndOf="@+id/iv_extra_adding"
        android:layout_toStartOf="@+id/tv_extra_adding_price"
        android:layout_centerVertical="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/extra_adding_text"
            android:layout_width="match_parent"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textSize="@dimen/_15sdp"
            android:text="Half Litter Coke"
            android:textColor="@color/red_color" />


        <TextView
            android:id="@+id/tv_replace_of"
            android:maxLines="1"
            android:ellipsize="end"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_3sdp"
            android:hint="In Place Of"
            android:textColor="@color/black"
            android:textSize="@dimen/_10sdp" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_extra_adding_price"
        android:text="$50"
        android:textColor="@color/red_color"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:textSize="@dimen/_13sdp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</RelativeLayout>